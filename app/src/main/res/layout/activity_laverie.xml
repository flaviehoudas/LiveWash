<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Laverie">


    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:baselineAligned="false">


        <LinearLayout
            android:id="@+id/layoutBas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/layoutGauche"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttonMach1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/machinerouge"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/buttonMach2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/machineverte"
                    android:padding="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/buttonMach3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/machineverte"
                    android:padding="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/buttonMach4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/machineverte"
                    android:padding="10dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDroit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttonMach5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/machineverte"
                    android:text="Sèche-Linge 1" />

                <ImageView
                    android:id="@+id/buttonMach6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/machineverte"
                    android:text="Sèche-Linge 2" />

                <ImageView
                    android:id="@+id/buttonMach7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/machinerouge"
                    android:text="Sèche-Linge 3" />

                <ImageView
                    android:id="@+id/buttonMach8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/machinerouge"
                    android:text="Sèche-Linge 4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHaut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="11"
            android:baselineAligned="false">

            <Button

                android:id="@+id/buttonRetour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:text="Retour" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>